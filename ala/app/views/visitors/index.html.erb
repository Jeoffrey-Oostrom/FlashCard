<table class="table table-striped table-condensed">
  <tr>
    <td><b>name</b></td>
    <td><b>username</b></td>
    <td colspan="2"><b>actions</b></td>
  </tr>
  <% @visitors.each do |visitor| %>
    <tr>
      <td><%= visitor.name %></td>
      <td><%= visitor.username %></td>
      <td><%= link_to 'edit', edit_visitor_path(visitor.id) %></td>
      <td><%= link_to 'delete', visitor_path(visitor), data: {confirm: "Are you sure?"}, method: :delete %></td>
    </tr>
  <% end %>
</table>