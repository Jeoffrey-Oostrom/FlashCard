<%= form_for @subject do |f| %>
    <% if @subject.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @subject.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :subject %><br />
      <%= f.text_field :subject %>
    </p>
    <p class="button"><%= f.submit %></p>
<% end %>